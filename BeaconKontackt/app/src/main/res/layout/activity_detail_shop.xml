
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/space_rounded">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="900dp"
                android:background="@drawable/space_rounded"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imagenDetail"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/space_rounded"
                    android:src="@drawable/promo"
                    android:layout_alignParentEnd="true"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/com_facebook_likeview_text_color"
                    android:id="@+id/view"
                    android:layout_alignBottom="@+id/linearLayout6"
                    android:layout_alignParentStart="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout6"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"

                    android:layout_below="@+id/imagenDetail"
                    android:weightSum="1">
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="64dp"
                        android:id="@+id/imageShopDetail"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="13dp"
                        android:layout_alignParentStart="true" />
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout5"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.76">

                        <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="merchantName"
                            android:layout_marginBottom="5dp"
                    android:id="@+id/merchantNameStoreDetail"
                    />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Detalles de la tienda"
                            android:id="@+id/detailMerchantStoreDetail"
                            />
                </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="2km"
                            android:textStyle="bold"
                            android:id="@+id/textView2"
                            android:layout_gravity="right" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout4"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/view"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="left"
                        android:layout_marginRight="30dp">

                        <TextView
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Compras"
                            android:layout_width="wrap_content"
                            android:id="@+id/purchaseDetailText"
                            android:textSize="14dp"
                            android:layout_gravity="center_vertical" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:id="@+id/imageView2"
                            android:layout_gravity="center"
                            android:layout_alignStart="@+id/distance" />
                        <TextView
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="100"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/purchaseDetail"
                            android:layout_gravity="center"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="30dp"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Walk-ins"
                            android:textSize="14dp"
                            android:id="@+id/walkinDetailText"
                            android:textColor="@color/grey"
                            android:layout_gravity="center" />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:scaleType="fitXY"
                            android:id="@+id/imageView3"
                            android:layout_below="@+id/imageView2"
                            android:layout_toEndOf="@+id/imageView2"
                            android:layout_gravity="center" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="50"
                            android:id="@+id/walkinDetail"
                            android:textStyle="bold"
                            android:layout_gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Escaneos"
                            android:textSize="14dp"
                            android:id="@+id/scanDetailText"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:id="@+id/imageView4"
                            android:layout_alignTop="@+id/imageView5"
                            android:layout_toStartOf="@+id/imageView5"
                            android:layout_gravity="center" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="80"
                            android:id="@+id/scanDetail"
                            android:textStyle="bold"
                            android:layout_gravity="center" />

                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/com_facebook_likeview_text_color"

                    android:id="@+id/view2"
                    android:layout_below="@+id/linearLayout4"
                    android:layout_alignParentStart="true" />
                <GridView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departments"
                    android:numColumns="2"
                    android:layout_below="@+id/view2"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>
        </RadioGroup>

    </ScrollView>


</LinearLayout> <!-- The navigation drawer -->