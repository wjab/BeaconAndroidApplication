<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:textSize="20dp"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:gravity="left|bottom"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="13dp"
        android:id="@+id/messagePoints"
        android:layout_marginTop="54dp"
        android:layout_width="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/message" />



    <EditText
        android:id="@+id/points"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="numberSigned"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="Puntos a regalar"
        android:paddingLeft="8dp"
        android:background="@drawable/edittext_border"
        android:scaleType="fitXY"
        android:textSize="15dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/messagePoints"
        android:layout_alignStart="@+id/message" />

    <EditText
        android:id="@+id/message"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:hint="Mensaje"
        android:paddingLeft="8dp"
        android:background="@drawable/edittext_border"
        android:scaleType="fitXY"
        android:textSize="15dp"
        android:layout_marginBottom="59dp"
        android:layout_above="@+id/gift_points"
        android:layout_centerHorizontal="true" />
    <Button

        android:gravity="center"
        android:text="Regalar puntos"
        android:id="@+id/gift_points"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/darkBlue"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp"></Button>
</RelativeLayout>

