
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/space_rounded">

            <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="409dp"
            android:background="@drawable/space_rounded"
            android:orientation="vertical"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"

          >
            <ImageView
                android:id="@+id/imagenPromoDetail"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                android:background="@drawable/space_rounded"
                android:src="@drawable/promo"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:layout_alignBottom="@+id/imagenPromoDetail"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/linearLayout2"
                    android:layout_alignParentStart="true">


                    <TextView
                        android:text="Nombre "
                        android:textSize="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="11dp"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal|bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tituloPromo"
                        android:layout_alignBottom="@+id/degradadoFondo"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1" />

                    <TextView
                        android:text="10000"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="11dp"
                        android:layout_marginRight="47dp"
                        android:id="@+id/puntosPromoDetail"
                        android:textIsSelectable="false"
                        android:layout_alignBottom="@+id/degradadoFondo"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="end|center" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="11dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/share"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_share_white"/>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/com_facebook_likeview_text_color"
                    android:layout_below="@+id/imageMerchant"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/view" />
                <ImageView
                    android:layout_width="126dp"
                    android:layout_height="84dp"
                    android:id="@+id/imageMerchant"
                    android:layout_marginTop="32dp"
                    android:layout_below="@+id/imagenPromoDetail"
                    android:layout_alignStart="@+id/linearLayout2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Detalles de la tienda"
                    android:textSize="20dp"
                    android:id="@+id/detailMerchant"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/merchantName"
                    android:layout_alignStart="@+id/merchantName"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Detalles de la promocion"
                    android:id="@+id/descriptionPromoDetai"
                    android:layout_below="@+id/imageMerchant"
                    android:layout_alignStart="@+id/imageMerchant"
                    android:textSize="20dp"
                    android:layout_marginTop="38dp"
                    android:layout_alignEnd="@+id/linearLayout2"
                    android:layout_alignParentBottom="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="merchantName"
                    android:id="@+id/merchantName"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageMerchant"
                    android:layout_marginStart="36dp" />


            </RelativeLayout> <!-- The navigation drawer -->



        </RadioGroup>
        </ScrollView>






    </LinearLayout> <!-- The navigation drawer -->