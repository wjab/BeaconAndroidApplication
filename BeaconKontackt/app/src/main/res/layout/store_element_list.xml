<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/store_image"
            android:src="@drawable/promo"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="15dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/purchase_blue"
                    android:layout_centerVertical="true"
                    android:layout_alignStart="@+id/distance"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="15dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/walk_in_blue"
                    android:layout_below="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="15dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/scan_blue"
                    android:layout_alignTop="@+id/imageView5"
                    android:layout_toStartOf="@+id/imageView5"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="15dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/receipt_blue"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="100"
                    android:layout_marginRight="15dp"
                    android:layout_width="50dp"
                    android:id="@+id/textView" />
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="50"
                    android:layout_marginRight="15dp"
                    android:id="@+id/textView1" />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="80"
                    android:id="@+id/textView2" />
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="40"
                    android:id="@+id/textView3" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
