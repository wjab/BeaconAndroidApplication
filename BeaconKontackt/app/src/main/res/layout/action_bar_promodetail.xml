<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >

    <TextView
        android:id="@+id/userPointsAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:layout_marginStart="118dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:id="@+id/open_history_points"
        android:background="@drawable/arrow"
        android:layout_below="@+id/userPointsAction"
        android:layout_alignStart="@+id/userPointsAction" />


    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:background="@drawable/corazon"
        android:layout_alignTop="@+id/imageprofile_navigation"
        android:layout_alignParentEnd="true"
        android:id="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:text="Volver"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/userPointsAction"
        android:layout_toStartOf="@+id/userPointsAction"
        android:layout_marginEnd="46dp" />

</RelativeLayout>

