<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent" android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/Imagen_Promo"
        android:src="@drawable/promo"
        />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/degradadoFondo"
        android:src="@drawable/degnegro"
        android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/promo_description"
            android:textSize="20dp"
            android:paddingBottom="5dp"
            android:lines="3"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal|bottom"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/Titulo_Promo"
            android:layout_alignBottom="@+id/Imagen_Promo" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/etiquetaPuntos"
        android:src="@drawable/circulo"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/Imagen_Promo"
        android:layout_alignEnd="@+id/Imagen_Promo"
        android:layout_marginTop="15dp" />
        <TextView
            android:text="10000 pts"
            android:layout_marginRight="15dp"
            android:textSize="15dp"
            android:rotation="-15"
            android:layout_width="fill_parent"
            android:textColor="@color/white"
            android:gravity="center_vertical|center"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:id="@+id/Puntos_promo"
            android:textIsSelectable="false"
            android:layout_marginLeft="18dp"
            android:layout_alignTop="@+id/etiquetaPuntos"
            android:layout_alignStart="@+id/etiquetaPuntos"
            android:layout_alignBottom="@+id/etiquetaPuntos"
            android:layout_alignEnd="@+id/etiquetaPuntos"/>
</RelativeLayout>

