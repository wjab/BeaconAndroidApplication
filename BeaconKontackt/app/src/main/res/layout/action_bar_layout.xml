<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageprofile_navigation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/profiledefault"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_marginRight="50dp"/>


    <TextView
        android:id="@+id/userPointsAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:layout_marginStart="70dp"
        android:layout_above="@+id/open_history_points"
        android:layout_toEndOf="@+id/imageprofile_navigation" />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:id="@+id/open_history_points"
        android:background="@drawable/arrow"
        android:layout_alignBottom="@+id/imageprofile_navigation"
        android:layout_alignStart="@+id/userPointsAction"
        android:layout_marginStart="7dp" />


    <Button
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_added"
        android:layout_alignTop="@+id/imageprofile_navigation"
        android:layout_alignParentEnd="true"
        android:id="@+id/button" />

</RelativeLayout>
